<%- include('../../layout/head.ejs') %>


<body>
  <%- include('../../layout/header.ejs') %>
  <container class="searchcontainter">
  <ul>
    <% tenBooks.forEach(bookObj => { %>
    <li id = "booktitle"><%= bookObj.title %></li>
    <li><img class = "bookimg" src="<%= bookObj.image_url %>"></li>
    <li><%= bookObj.authors %></li>
    <li><%= bookObj.description %></li>
    <li>ISBN: <%= bookObj.isbn %></li>
    <!-- <li><%= bookObj.bookshelf %></li> -->
    <li>
      <form action="/saved_books" method="POST">
        <input type="hidden" name="title" value="<%= bookObj.title %>">
        <input type="hidden" name="author" value="<%= bookObj.author %>">
        <input type="hidden" name="description" value="<%= bookObj.description %>">
        <input type="hidden" name="image_url" value="<%= bookObj.image_url %>">
        <input type="text" name="bookshelf" value="Please insert category here">
        <input type="submit">
      </form>
    </li>
    <% }) %>
  </ul>
  </container>
</body>
</html>
