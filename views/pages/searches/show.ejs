<%- include('../../layout/head.ejs') %>

<body>
  <%- include('../../layout/header.ejs') %>
  <container class="searchcontainter">
  <ul>
    <% tenBooks.forEach(bookObj => { %>
    <li id = "booktitle"><%= bookObj.title %></li>
    <li><img class = "bookimg" src="<%= bookObj.image_url %>"></li>
    <li><%= bookObj.authors %></li>
    <li><%= bookObj.description %></li>
    <li>ISBN: <%= bookObj.isbn %></li>
    <li><img src="<%= bookObj.image_url %>"></li>
    <li>
      <input type="submit" value="Select Book" id="showForm">
    <%- include('../../layout/updateForm.ejs', {bookObj: bookObj}) %>
    </li>
    <% }) %>
  </ul>
  </container>
<script src="JS/app.js"></script>
</body>

</html>
