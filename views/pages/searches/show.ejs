<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/base.css">
    <link rel="stylesheet" href="styles/modules.css">
    <link rel="stylesheet" href="styles/layout.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Best Books!</title>
</head>

<body>
  <%- include('../../layout/header.ejs') %>
  <container class="containter">
  <!-- <%- include('../../layout/database.ejs') %> -->
  <ul>
    <% tenBooks.forEach((bookObj, idx) => { %>
    <li><%= tenBooks[idx].title %></li>
    <li><%= tenBooks[idx].author %></li>
    <li><%= tenBooks[idx].description %></li>
    <li><%= tenBooks[idx].isbn %></li>
    <li><img src="<%= tenBooks[idx].image_url %>"></li>
    <!-- <li><%= tenBooks[idx].bookshelf %></li> -->
    <li>
      <form action="/saved_books" method="POST">
        <input type="hidden" name="title" value="<%= tenBooks.title %>">
        <input type="hidden" name="author" value="<%= tenBooks.author %>">
        <input type="hidden" name="description" value="<%= tenBooks.description %>">
        <input type="hidden" name="image_url" value="<%= tenBooks.image_url %>">
        <input type="text" name="bookshelf" value="Please insert category here">
        <input type="submit">
      </form>
    </li>
    <% }) %>
  </ul>
  </container>
</body>
</html>
